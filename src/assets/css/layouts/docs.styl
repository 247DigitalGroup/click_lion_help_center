@import url('http://fonts.googleapis.com/css?family=Lato:400,700,300,900')
@import '../_elements/configs'
@import '../_elements/document'
  
body
  &.locked
    overflow hidden
    
.hwp
  @media print
    display none

.docs
  
  .fixed-bar
    z-index 1
    position fixed
    top 0
    right 0
    left 25%
    background-color active-color
    box-shadow 3px 0 5px 0 rgba(black, .25)
    @media small-only
      left 0
    @media xlarge
      left 18%
    .nav
      margin 0
      padding 0
      list-style none
      font-size 0
      > li
        display inline-block
        vertical-align bottom
        > a
          color white
          line-height 40px
          display block
          padding 0 15px
          font-size 14px
          margin 0
          &.menu
            background-color rgba(black, .1)
            outline none
          &.home
            background-color rgba(black, .2)
          &.doc
            background-color rgba(black, .1)
          &.title
            font-weight demi-bold-font-weight
            font-size 11px
            letter-spacing 1px
            text-transform uppercase
            white-space nowrap
  
  .fixed-menu
    border-right 1px solid smoke
    background-color white
    width 25%
    position fixed
    top 0
    bottom 0
    left 0
    padding 30px 0 30px 20px
    overflow-y scroll
    @media small-only
      border-right none
      width 100%
      z-index 3
    @media xlarge
      width 18%
    a.close
      position fixed
      top 0
      right 0
      width 30px
      height @width
      text-align center
      line-height @height
      color white
      background-color active-color
    
  .wrapper
    @media print
      width 100%
      position initial
      overflow visible
    background-color darken(white, 1)
    width 75%
    position fixed
    top 0
    bottom 0
    right 0
    overflow-y scroll
    -webkit-overflow-scrolling touch
    @media small-only
      position initial
      width auto
    @media xlarge
      width 82%
      
  ul.pages
    margin 0
    padding 0
    list-style none
    > li
      &:not(:last-child)
        margin-bottom 20px
      &.a
        > a
          color black
      > a
        display block
        color tuatara
        font-weight medium-bold-font-weight
        letter-spacing 1px
        text-transform uppercase
        font-size 12px
        padding-right 15px
        transition color .2s ease-in-out
      @media medium
        &:not(.a)
          ul.sections
            display none
        
  ul.sections
    list-style none
    margin 5px 0 0 0
    > li
      &:hover
        > a
          color active-color
      &.a
        > a
          color active-color
      > a
        transition color .2s ease-in-out
        display block
        color tuatara
        font-size 13px
        font-weight demi-bold-font-weight
        padding 5px 15px 5px 0
  
  ul.articles
    list-style none
    margin 0 0 0 15px
    > li
      border-right 3px solid transparent
      margin-bottom 3px
      &:hover,
      &.a
        border-right-color active-color
        > a
          color active-color
      > a
        transition color .2s ease-in-out
        display block
        padding-right 15px
        color jumbo
        font-size 12.5px
  
  .header
    bg-color = #32373c
    position relative
    z-index 2
    background-color bg-color
    background-size cover
    background-position center
    
    .title-bar
      background-color #32373c
      padding 20px 0
      @media small-only
        .title
          font-size 22px
        .description
          font-size 14px
      .menu
        line-height 25px
        color lighten(bg-color, 40)
        outline none
      .title
        color white
        margin 0
      .description
        color darken(white, 10)
        font-size 15px
        margin 0
      
    .guide-bar
      background-color lighten(bg-color, 8)
      p
        color white
        margin 12px 0
        @media small-only
          display none
      input[type=search]
        border-radius border
        border none
        margin 10px 0
        padding 5px 6px
        font-size 12px

  .doc-body
    .threads
      img
        width 96px
        margin-bottom 15px
      h2
        font-size 12px
        text-transform uppercase
        letter-spacing 1px
      p
        color black
        font-size 13px