.footer
  
  .bug-report
    font-size 12px
  
  h5
    color tuatara
    font-size 13px
    text-transform uppercase
    font-weight medium-bold-font-weight
    letter-spacing 1px
    margin-bottom 8px
  p
    color steel
    font-size 13px
    margin 0
  
  > .subscribe
    background-color darken(white, 8)
    padding 25px 0
    input[type=email], button.bt
      font-size 12px
      height 30px
    input[type=email]
      padding 5px 8px
      
  > .copyright
    background-color #32373C
    padding 13px 0
    p
      font-size 10px
      text-transform uppercase
      font-weight demi-bold-font-weight
      letter-spacing 2px
      color base
      margin 0

  > .stats
    background-color darken(white, 5)
    padding 50px 0 20px 0
    h5.title
      font-weight medium-bold-font-weight
      font-size 12px
      color danger-color
      margin-bottom 10px
    ul.menu
      margin 0 0 20px 0
      padding 0
      list-style none
      > li
        > a
          span.fa
            font-size 16px
          span.fa-facebook-square
            color facebook-color
          span.fa-twitter-square
            color twitter-color
          span.fa-youtube-play
            color youtube-color
          line-height 22px
          font-size 11px
          font-weight demi-bold-font-weight
          text-transform uppercase
          letter-spacing 1px
          color charcoal
          transition color .2s ease-in-out
          &:hover
            color black