  background-image url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZlcnNpb249IjEuMSIgeD0iMTJweCIgeT0iMHB4IiB3aWR0aD0iMjRweCIgaGVpZ2h0PSIzcHgiIHZpZXdCb3g9IjAgMCA2IDMiIGVuYWJsZS1iYWNrZ3JvdW5kPSJuZXcgMCAwIDYgMyIgeG1sOnNwYWNlPSJwcmVzZXJ2ZSI+PHBvbHlnb24gcG9pbnRzPSI1Ljk5MiwwIDIuOTkyLDMgLTAuMDA4LDAgIi8+PC9zdmc+')
  background-repeat no-repeat
  background-position right center  

{inputs}
  display block
  width 100%
  background-color white
  font-size 13px
  font-family font-family-sans-serif
  font-weight demi-bold-font-weight
  border 1px solid #e2e2e2
  border-right-color darken(#e2e2e2, 5)
  border-bottom-color @border-right-color
  border-radius radius
  margin-bottom 15px
  outline none
  appearance none
  padding 6px 8px
  &[disabled]
    background-color darken(white, 2)
    cursor not-allowed
  &.e,
  &.error
    margin-bottom 0
  &:hover
    border-color iron
  &:focus
    background-color white
    outline none
    box-shadow 0 0 0 2px rgba(info-color, .2)
    border-color info-color
    
label.image-picker
  display block
  border-radius radius
  text-transform uppercase
  background-repeat no-repeat
  background-size cover
  background-position center
  background-color darken(white, 10)
  width 100%
  height 180px
  margin-bottom 20px
  position relative
  > input
    display none
  &:hover
    &:before, &:after
      opacity 1
  &:before, &:after
    transition all .2s ease-in-out
    border-radius radius
    content ''
    top 0
    bottom 0
    right 0
    left 0
    position absolute
    opacity 0
  &:before
    z-index 1
    background linear-gradient(top, rgba(103, 95, 113, .7), rgba(104, 95, 113, .4))
  &:after
    z-index 2
    background-image url(/img/image-upload-overlay.svg)
    background-repeat no-repeat
    background-position center
  & + a.image-picker-cancel
    display none
  &.removable + a.image-picker-cancel
    display block
    margin -12px 0 20px 0
    color danger-color
    font-size 13px
    &:hover
      color lighten(danger-color, 10)
  
form  
  &.bd
    {inputs}
      border none
      border-bottom 1px solid gainsboro
      padding 5px 0
      transition border-bottom-color .2s ease-in-out
      &:focus
        box-shadow none
        border-bottom-color active-color
    .bt
      color black
      padding 8px 13px 8px 15px