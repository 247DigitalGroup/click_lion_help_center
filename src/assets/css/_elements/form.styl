inputs = 'input[type=text], input[type=number], input[type=email], input[type=password], input[type=search], select, textarea'
_inputs = '> input[type=text], > input[type=number], > input[type=email], > input[type=password], > input[type=search], > select, > textarea'

.e, .error
  {inputs}
    margin-bottom 0

.e small.e,
small.e,
.error small.error,
small.error
  bg-color = #f5f5f5
  error-color = lighten(danger-color, 10)
  font-style italic
  display block
  border-radius 0 0 radius radius
  margin 0 0 20px 0
  background-color bg-color
  border-left 5px solid danger-color
  background bg-color
  font-size 12px
  padding 8px 15px 8px 35px
  color #444
  position relative
  &:before
    position absolute
    left 10px
    top 9px
    color error-color
    content '\f06a'
    font normal normal normal 18px/1 FontAwesome
    text-rendering auto
    -webkit-font-smoothing antialiased

.bt
  line-height 19px
  &.bd
    border 2px solid jet
    font-size 10px
    letter-spacing 1.5px
    text-transform uppercase
    background-color transparent
    font-weight demi-bold-font-weight
    padding 8px 15px
    &:hover
      background-color transparent
    &.white
      border-color white
      color @border-color
      
span.radio
  &.tl
    > label
      text-align left

label
  font-size 13px
  color steel
  margin 6px 0
  + div.input
    padding-top 6px
  > div.input
    padding-top 6px
  > .rw
    margin-top 6px
  {_inputs}
    margin-top 6px
  small
    font-size 12px
    color jumbo
  
form
  h6.block-title
    font-weight medium-bold-font-weight
    text-transform uppercase
    margin 15px 0
    font-size 12px
    letter-spacing 1px
  &.f-2
    label
      display block
      text-align right
  &.sm-f-1
    @media small-only
      label
        text-align left
    
span.sf,
span.pf
  background-color silver
  color black
  padding 0 8px
  line-height 28px
  text-align center
  font-size 13px
  display block
  border 1px solid iron
  border-right-color darken(iron, 5)
  border-bottom-color @border-right-color
  white-space nowrap
  
.pf-ra
  input[type=text],
  input[type=number]
    border-top-left-radius 0
    border-bottom-left-radius 0

.sf-ra
  input[type=text],
  input[type=number]
    border-top-right-radius 0
    border-bottom-right-radius 0

span.sf
  border-left none
  &.ra
    border-radius 0 radius radius 0

span.pf
  border-right none
  &.ra
    border-radius radius 0 0 radius
    
